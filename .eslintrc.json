{
  "globals": {
    "Promise": true
  },
  "extends": "airbnb-base",
  "parser": "babel-eslint",
  "rules": {
    "func-names": 0,
    "comma-dangle": [1, "always-multiline"],
    "global-require": 0,
    "no-param-reassign": 0,
    "no-underscore-dangle": 0,
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "new-cap": [
      1,
      { "capIsNewExceptions": ["DESCRIPTION"] }
    ],
    "max-len": [1, 200, 2, {
      "ignoreUrls": true,
      "ignoreComments": false
    }]
  }
}
